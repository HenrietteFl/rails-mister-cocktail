<%= content_for :banner_options do %>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1><%= @cocktail.name %></h1>
    <ul>
      <% @cocktail.doses.each do |dose| %>
      <li><%= dose.description %> <%= dose.amount %><%= dose.ingredient.name %> <%= link_to 'Delete Doses', dose_path(dose), method: :delete %></li>
      <% end %>
    </ul>
      <%= link_to 'Add a dose', edit_cocktail_path(@cocktail), class: "btn btn-primary" %>
      </br>
      </br>
      <%= link_to 'Back', cocktails_path, class: "btn btn-primary" %>
      </br>
      </br>
      <%= link_to 'Delete Cocktail', cocktail_path(@cocktail), method: :delete, class: "btn btn-primary" %>

    </div>
  </div>
</div>
<% end %>
<%= render "shared/banner" %>

