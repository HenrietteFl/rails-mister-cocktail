<div class = "container" style="text-align: center;">
  <h1>Name: <%= @cocktail.name %></h1>

  <div class="d-inline-block bg-warning"
  <% @cocktail.doses.each do |dose| %>
    <p> <%= dose.description %> </p>
    <p> <%= dose.amount %> </p>
    <p> <%= dose.ingredient.name %> </p>
    <p><%= link_to "Delete", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" },
      class: 'btn btn-alarm' %></p>
  <% end %>
  </div>

  <h3>Add a new ingredient</h3>
  <%= render "doses/form" %>
  <%= link_to "Back", cocktails_path, class: 'btn btn-primary' %>

</div>


