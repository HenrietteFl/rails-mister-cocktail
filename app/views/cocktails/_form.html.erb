<%= simple_form_for(@cocktail) do |f| %>
<%= f.input :name, placeholder: "Mojito" %>
<%= f.input :photo, as: :attachinary %>
<%= f.simple_fields_for :doses do |dose| %>
  <%= render 'dose_fields', f: dose %>
<% end %>
<div class="links">

  </br>
  <%= link_to_add_association 'add dose', f, :doses, class: "btn btn-primary" %>
</div>
</br>
<%= f.button :submit, class: "btn btn-primary"  %>
<% end %>
